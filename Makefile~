################################################################################
#	Makefile variables														   #
################################################################################

CC				=	cc
CFLAGS			=	-Wall -Werror -Wextra -g
CC_OPT			=	

DEB				=	valgrind
DEB_OPT			=	--tool=memcheck \
					--leak-check=full \
					--show-leak-kinds=all \
					--track-fds=yes

ARG0			=	

ARG1			=	

ARG2			=	
					
ARG3			=	

RM				=	rm -f

################################################################################
#	Librairies																   #
################################################################################

LIB_LIBFT_DIR	=	./libft
LIB_PRINTF_DIR	=	./ft_printf
LIB_GNL_DIR		=	./gnl

LIBFT_NAME		=	-lft
FTPRINTF_NAME	=	-lftprintf
LIB_GNL_NAME	=	-lgnl

LIB_PROG		=
LIB_OPTI		=
LIB_OPTI		=
LIB_NAME		=

MYLIBS			=	-L$(LIB_LIBFT_DIR) $(LIBFT_NAME)\
					-lreadline

MYLIBS_BONUS	=	

################################################################################
#	Mandatory part															   #
################################################################################

SRC				=	./src/main.c \
					./src/ft_builtin.c \
					./src/ft_echo.c \
					./src/ft_env.c \
					./src/ft_cd.c \
					./src/ft_signal.c \
					./src/ft_exit.c

OBJ				=	$(SRC:.c=.o)

NAME			=	minishell

################################################################################
#	Bonus part																   #
################################################################################

SRC_BONUS		=	

OBJ_BONUS		=	$(SRC_BONUS:.c=.o)

NAME_BONUS		=	

################################################################################
#	Colors																	   #
################################################################################

RESET			=	'\033[0m'

# Regular

BLACK			=	'\033[0;30m'
RED				=	'\033[0;31m'
GREEN			=	'\033[0;92m'
YELLOW			=	'\033[0;93m'
BLUE			=	'\033[0;94m'
PURPLE			=	'\033[0;95m'
CYAN			=	'\033[0;96m'
WHITE			=	'\033[0;97m'

# Bold

BBLACK			=	'\033[1;30m'
BRED			=	'\033[1;31m'
BGREEN			=	'\033[1;92m'
BYELLOW			=	'\033[1;93m'
BBLUE			=	'\033[1;94m'
BPURPLE			=	'\033[1;95m'
BCYAN			=	'\033[1;96m'
BWHITE			=	'\033[1;97m'

################################################################################
#	Progress bar															   #
################################################################################

CURRENT_FILE	= 	0
NB_SRC			=	6
SLEEP_TIME		=	0.001

################################################################################
#	Rules																	   #
################################################################################

.PHONY :	all $(NAME) deb clean fclean re cafe nico good bad

all: 		$(LIB_LIBFT_DIR)/libft.a \
			$(NAME)

$(NAME):	$(OBJ)
	
	@printf "\n$(BYELLOW)Compiling of the program $(NAME)$(YELLOW)\n"
	@$(CC) $(CFLAGS) $(OBJ) $(MYLIBS) -o $(NAME)
	@for i in $$(seq 1 50); do \
		printf "\r\033[K\033[0K["; \
		for j in $$(seq 1 $$i); do \
			printf "=="; \
		done; \
		printf " %d%% ]" $$((i * 2)); \
		sleep $(SLEEP_TIME); \
	done; \
	echo $(RESET)

$(LIB_LIBFT_DIR)/libft.a:
	@$(MAKE) -sC $(LIB_LIBFT_DIR)

%.o :		%.c
	@$(eval CURRENT_FILE=$(shell echo $$(($(CURRENT_FILE)+1))))
	@printf "\r\033[K\033[0K$(BBLUE)Compiling files *.C => $< ["
	@for i in $$(seq 0 $$(($(CURRENT_FILE)*100/$(NB_SRC)))); do \
		printf "="; \
	done
	@printf "] $(CURRENT_FILE)/$(NB_SRC) $(RESET)"
	@cc -Wall -Werror -Wextra -c -o $@ $<

deb:		$(LIB_LIBFT_DIR)/libft.a \
			$(LIB_GNL_DIR)/libgnl.a \
			$(OBJ)

	@$(CC) $(CFLAGS) $(CC_OPT) $(OBJ) $(MYLIBS) -g -o $(NAME)
	@echo "\n$(RESET)==========	RUN DEBUG MODE	=========="
	$(DEB) $(DEB_OPT) ./$(NAME)

clean:
	@$(RM) src/*.o > /dev/null 2>&1
	@for i in $$(seq 100 -1 0); do \
		printf "\r\033[K\033[0K"; \
		if [ $$((i % 4)) -eq 0 ]; then \
			printf "$(BRED)DELETE - ["; \
		elif [ $$((i % 4)) -eq 1 ]; then \
			printf "$(BRED)DELETE / ["; \
		elif [ $$((i % 4)) -eq 2 ]; then \
			printf "$(BRED)DELETE | ["; \
		else \
			printf "$(BRED)DELETE \\ ["; \
		fi; \
		for j in $$(seq 0 $$i); do \
			printf '='; \
		done; \
		printf " %d/100 ]$(RESET)" $$i; \
		sleep $(SLEEP_TIME); \
	done
	@printf "\r\033[K\033[0K$(GREEN)All files *.o of $(NAME) deleted\n$(WITHE)"
	@$(MAKE) -sC $(LIB_LIBFT_DIR) clean

fclean: 	clean
	@$(RM) $(NAME) > /dev/null 2>&1
	@printf "\r\033[K\033[0K$(GREEN)$(NAME) deleted\n $(RESET)"
	@$(MAKE) -sC $(LIB_LIBFT_DIR) fclean

re : 		fclean all

