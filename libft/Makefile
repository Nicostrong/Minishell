CC				=	cc
CFLAGS			=	-Wall -Werror -Wextra -g

DEB				=	valgrind
DEB_OPT			=	--tool=memcheck --leak-check=full --show-leak-kinds=all

ARG				=

RM				=	rm -f

################################################################################
#	Librairies                                                                 #
################################################################################

LIB_DIR			=	
LIB_PROG		=	ar -rcs
LIB_OPTI		=	ranlib
LIB_NAME		=	libft.a

